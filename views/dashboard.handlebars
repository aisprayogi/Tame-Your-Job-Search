  <th>Job Title</th>
  <th>Company</th>
  <th>Method</th>
</thead>
  {{#each jobs}}{{#if active}}
  <tr onclick="window.location.href='/job/{{id}}'">
    <td>{{jobtitle}}</td>
    <td>{{company}}</td>
    <td>{{method}}</td>
  </tr>
 {{/if}} {{/each}}
</table>
